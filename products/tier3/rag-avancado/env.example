# Database
DATABASE_URL=postgresql://genesys:genesys@localhost:5432/genesys_db

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-3-large

# ChromaDB (Kermartin Integration)
CHROMADB_PATH=/home/clenio/Documentos/Meusagentes/kermartin/knowledge_base/chroma/
CHROMADB_COLLECTION=processos_juridicos

# App Configuration
DEBUG=False
PORT=8002
LOG_LEVEL=INFO

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5
MAX_CONTEXT_LENGTH=4000
SIMILARITY_THRESHOLD=0.7

# LangChain
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=

# Rate Limiting
MAX_QUERIES_PER_HOUR=100
MAX_CONCURRENT_QUERIES=10

# Features
ENABLE_CHAT=True
ENABLE_CITATIONS=True
ENABLE_FEEDBACK=True
ENABLE_HISTORY=True

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Monitoring
ENABLE_LOGGING=True
LOG_FILE=rag_avancado.log

